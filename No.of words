#include <stdio.h>

int main() 
{
    char str1[100];
    int i,len,count=0;
    printf("Enter a string:");
    gets(str1);
    for(i=0;str1[i]!='\0';i++);
    len=i;
    for(i=len;i>=0;i--)
    {
        if(str1[i]==' '||str1[i]=='\0')
        count++;
    }
    printf("No.of words=%d",count);
    return 0;
}
